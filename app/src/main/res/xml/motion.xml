<?xml version="1.0" encoding="utf-8"?>
<MotionScene xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	xmlns:motion="http://schemas.android.com/tools"
	>

	<Transition
		android:id="@+id/my_transition"
		app:constraintSetStart="@+id/starting_set"
		app:constraintSetEnd="@+id/ending_set"
		app:duration="100"
		>

		<OnSwipe
			app:touchAnchorId="@id/nsv"
			app:touchAnchorSide="top"
			app:dragDirection="dragUp" />


<!--		        <KeyFrameSet>-->
<!--		            <KeyAttribute-->
<!--		                app:framePosition="0"-->
<!--		                app:motionTarget="@id/tv_current_bo">-->
<!--		                <CustomAttribute-->
<!--		                    app:layout_constraintTop_toBottomOf="@id/iv" />-->
<!--		            </KeyAttribute>-->

<!--		            <KeyAttribute-->
<!--		                app:framePosition="10"-->
<!--		                app:motionTarget="@id/tv_current_bo">-->


<!--		            </KeyAttribute>-->
<!--		        </KeyFrameSet>-->

	</Transition>

	<!--Начало движения-->
	<ConstraintSet android:id="@+id/starting_set">
		<Constraint
			android:id="@id/nsv"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			app:layout_constraintRight_toRightOf="parent"
			app:layout_constraintTop_toBottomOf="@id/tv_count_bonus"
			/>

		<Constraint
			android:id="@+id/tv_current_bo"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			app:layout_constraintRight_toRightOf="parent"
			app:layout_constraintTop_toBottomOf="@id/iv"
			/>

	</ConstraintSet>

	<!--Среднее состояние-->
	<ConstraintSet android:id="@+id/ending_set">
		<Constraint
			android:id="@id/nsv"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:layout_marginTop="3dp"
			app:layout_constraintRight_toRightOf="parent"
			app:layout_constraintTop_toBottomOf="@id/tv_current_bo"
			/>

		<Constraint
			android:id="@+id/tv_current_bo"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			app:layout_constraintRight_toRightOf="parent"
			app:layout_constraintTop_toBottomOf="@id/iv"
			/>

	</ConstraintSet>

	<!--Окончание движения-->
	<ConstraintSet android:id="@+id/set_3">
		<Constraint
			android:id="@id/nsv"
			android:layout_marginTop="3dp"
			app:layout_constraintTop_toBottomOf="@id/tv_current_bo"
			app:layout_constraintRight_toRightOf="parent"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			/>

		<Constraint
			android:id="@id/tv_current_bo"
			app:layout_constraintBottom_toTopOf="@id/nsv"
			android:layout_marginTop="25dp"
			app:layout_constraintRight_toRightOf="parent"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			/>

		<Constraint
			android:id="@id/tv_count_bonus"
			app:layout_constraintTop_toBottomOf="@id/iv"
			app:layout_constraintRight_toRightOf="parent"
			android:layout_marginTop="20dp"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			/>

		<Constraint
			android:id="@id/iv"
			app:layout_constraintEnd_toEndOf="parent"
			app:layout_constraintStart_toStartOf="parent"
			app:layout_constraintTop_toTopOf="parent"
			android:layout_marginTop="8dp"
			android:layout_width="128dp"
			android:layout_height="128dp"
			android:visibility="invisible"
			/>
	</ConstraintSet>
</MotionScene>